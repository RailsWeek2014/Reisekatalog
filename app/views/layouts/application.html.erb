<!DOCTYPE html>
<html>
<head>
	<title>Reisekatalog</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>

	<div id="site">
		<div id="top"><h2>Reisekatalog</h2>
		</div>


		<div id="left_menu">
			<br>
			<%= link_to 'home' , root_path %>
			<br>
			<%= link_to 'acp' , acp_path if current_user.admin? %>
			<br>
			<% if user_signed_in? %>
			
			<%= link_to 'profile' , edit_user_registration_path %>
			<br>
			<%= link_to 'logout' , destroy_user_session_path, method: :delete %>

			<br>
			<br>
			<% else %>

			<%= link_to 'register' , new_user_registration_path %>
			<br>
			<%= link_to 'login' , new_user_session_path %>

			<% end %>
			<br>
			<br>
			<%= link_to 'all trips' , trips_path %><br>
			<%= link_to 'categories' , tag_index_path %>
			<br>
			<br>
			<% if user_signed_in?%>
			
			<p>Logged in as:
				<%= current_user.email %>
			</p>
			<% end %>
			
		</div>


		<div id="content">

			<% if flash[:alert] %>
			<p id="alert">
				<%= flash[:alert] %>
			</p>
			<% end %>

			<% if flash[:notice] %>
			<p id="notice">
				<%= flash[:notice] %>
			</p>
			<% end %>

			<%= yield %>

			
		</div>

		<div id="foot">Copyright by</div>

	</div>

</body>
</html>
