<p id="notice"><%= notice %></p>

<p>
  <strong>Land:</strong>
  <%= @trip.land %>
</p>

<p>
  <strong>Region:</strong>
  <%= @trip.region %>
</p>

<p>
  <strong>Hotel:</strong>
  <%= @trip.hotel %>
</p>

<p>
  <strong>Infos:</strong>
  <%= @trip.infos %>
</p>

<p>
  <strong>Preis:</strong>
  <%= number_to_currency @trip.preis %>
</p>

<p>
  <strong>Avarage Rating:</strong>
  <%= @trip.avg_rating %>
</p>

<% if @rating.nil? %>

    <% if can? :buy , @trip%>
    <%= link_to 'Buy' , new_rating_path(trip:@trip) , data: { confirm: 'Do you really want to buy?' } %>
    
    
    <% end %>
    
<% else %>
<% if can? :manage , @rating %>

<p>
  <strong>My Rating:</strong>
  <%= @trip.user_rating(current_user).round(2) %>
  <%= render 'ratings/form' %>
</p>
<% end %>

<% end %>
  
<% if can? :update , @trip %>
<%= link_to 'Edit', edit_trip_path(@trip) %> | 
<% end %>
<%= link_to 'Back', trips_path %>
